<%- include('../partials/header') %>
  <table id="list" class="cards">
    <thead>
      <tr>
        <th>Front</th>
        <th>Back</th>
        <th>Deck</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% decks.forEach((d) => { %>
        <% d.cards.forEach((c) => { %>  
          <tr>
            <td><%= c.front %></td>
            <td><%= c.back %></td>
            <td><%= d.name %></td>
            <td>
              <% if (user?._id.equals(c.user)) { %>
                <form action="/cards/<%= c._id %>?_method=DELETE" method="POST">
                  <input type="hidden" name="deck" value="<%= d._id %>">
                  <button type="submit">X</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }) %>
      <% }) %>
    </tbody>
  </table>

  <%- include('../partials/footer') %>